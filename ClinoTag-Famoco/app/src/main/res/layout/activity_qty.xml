<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".QtyActivity">


    <TextView
        android:id="@+id/InputQtyCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:ems="10"
        android:text="10000"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/labLieuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="130dp"
        android:text="PAPER ROLLS * 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InputQtyCount"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnUn7"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:onClick="SaisieCode"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUn4" />

    <Button
        android:id="@+id/btnUn5"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:onClick="SaisieCode"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/btnUn4"
        app:layout_constraintTop_toBottomOf="@+id/btnUn2" />

    <Button
        android:id="@+id/btnUn4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:onClick="SaisieCode"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUn1" />

    <Button
        android:id="@+id/btnUn3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:onClick="SaisieCode"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/btnUn2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUn9"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:onClick="SaisieCode"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/btnUn8"
        app:layout_constraintTop_toBottomOf="@+id/btnUn6" />

    <Button
        android:id="@+id/btnUn1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:onClick="SaisieCode"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/btnUn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUn6"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:onClick="SaisieCode"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/btnUn5"
        app:layout_constraintTop_toBottomOf="@+id/btnUn3" />

    <Button
        android:id="@+id/btnUn8"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:onClick="SaisieCode"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/btnUn7"
        app:layout_constraintTop_toBottomOf="@+id/btnUn5" />

    <Button
        android:id="@+id/btnUn0"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:onClick="SaisieCode"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/btnClose"
        app:layout_constraintTop_toBottomOf="@id/btnUn8" />

    <ImageButton
        android:id="@+id/btnRemove"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:onClick="onRemove"
        android:src="@android:drawable/ic_input_delete"
        app:layout_constraintStart_toEndOf="@+id/btnClose"
        app:layout_constraintTop_toBottomOf="@+id/btnUn0" />


    <ImageButton
        android:id="@+id/btnDone"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:onClick="onCheck"
        android:src="?android:attr/textCheckMark"
        app:layout_constraintStart_toEndOf="@+id/btnUn0"
        app:layout_constraintTop_toBottomOf="@id/btnUn9"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:onClick="onClose"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUn7" />

    <Button
        android:id="@+id/btnUn2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:onClick="SaisieCode"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/btnUn1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>